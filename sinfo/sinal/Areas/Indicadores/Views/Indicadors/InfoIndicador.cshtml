@Styles.Render("~/Content/bootstrapdataTablesCSS")

@section scripts {

@Scripts.Render("~/bundles/jquerydataTablesJS")
   <script>
      $(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
          'paging'      : true,
          'lengthChange': false,
          'searching'   : false,
          'ordering'    : true,
          'info'        : true,
          'autoWidth'   : false
        })
      })
   </script>
}

 <!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @Html.DisplayName("Indicador")
        <small>@Html.DisplayFor(model => model.Nombre)</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Históricos</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <td>Año</td>
                                <td>Valor</td>
                            </tr>
                        </thead>

                        @foreach (var item in ViewBag.CALCULO)
                        {
                            <tbody>
                                <tr>
                                    <td>@item.Text</td>
                                    <td>@item.Value</td>
                                </tr>
                            </tbody>
                        }
                    </table>                  
                </div>
                <!-- /.box-body -->
            </div>            
        </div>
        <div class="col-md-6">
            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Variable</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    @foreach (var ite in Model.Variable)
                    {
                        <ul>
                            <li>@ite.Nombre</li>
                        </ul>                        
                    }                   
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    Fuente: Alcaldía La Unión
                </div>
                <!-- /.box-footer-->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>

    @foreach (var ite in Model.Variable)
    {
        <div class="row">
            <div class="col-md-6">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">@ite.Nombre</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                    title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>                   
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <td>Año</td>
                                    <td>Valor</td>
                                </tr>
                            </thead>

                            @foreach (var it in ite.ValorVariable)
                            {
                                <tbody>
                                    <tr>
                                        <td>@it.Fecha</td>
                                        <td>@it.Valor</td>
                                    </tr>
                                </tbody>
                            }
                        </table>


<script type="text/javascript">
      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChart);
         

      function drawChart() {
          var data1 = google.visualization.arrayToDataTable([
                 ['Mes', 'Cantidad'],
               @foreach (var i in ite.ValorVariable)
              {
                @:['@Html.Raw(i.Fecha)', @i.Valor],
              }
      ]);
          var options1 = {
              title: 'Servicio o Producto',
              height: 300,
              width: '100%',
          };
          var chart1 = new google.visualization.PieChart(document.getElementById('piechart'));

          chart1.draw(data1, options1);

          function resizeHandler() {
              chart1.draw(data1, options1);
          }
          if (window.addEventListener) {
              window.addEventListener('resize', resizeHandler, false);
          }
          else if (window.attachEvent) {
              window.attachEvent('onresize', resizeHandler);
          }

      }


                        </script>





                        











                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
            <div class="col-md-6">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">@ite.Nombre</h3>                       
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div id="piechart"></div>
                    </div>
                    <!-- /.box-body -->
                </div>

                
            </div>
        </div>
    }    
</section>




